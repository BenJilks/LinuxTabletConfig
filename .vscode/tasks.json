{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "shell",
            "group": 
            {
                "kind": "build",
                "isDefault": true
            },
            "linux": 
            {
                "command": "make",
                "args": [
                    "debug"
                ]
            },
            "windows" : 
            {
                "command": "make",
                "args": [
                    "debug"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Release Build",
            "type": "shell",
            "group": 
            {
                "kind": "build",
                "isDefault": true
            },
            "linux": 
            {
                "command": "make",
            },
            "windows" : 
            {
                "command": "make",
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}